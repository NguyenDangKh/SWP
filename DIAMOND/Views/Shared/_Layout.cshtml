<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"] - ETERNAL SPARKLE DIAMOND STORE</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/slick.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/jquery.nice-number.css" />
	<link rel="stylesheet" href="~/css/memberpage.css">
	<link rel="stylesheet" href="~/css/ringview.css">
	
	<link rel="stylesheet" href="~/css/footer.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Ticks" />
	<link rel="stylesheet" href="~/DIAMOND.styles.css?v=@DateTime.Now.Ticks" />
</head>

<body class="d-flex flex-column min-vh-100">
	<!-- Header -->
	<header>
		<nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-3 sticky-navbar">
			<div class="container">
				<!-- Left Navbar -->
				<div class="navbar-left">
					<ul class="navbar-nav">
						<li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="RingView">RINGS</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="NecklaceView">NECKLACES</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="EarringsView">EARRINGS</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Products" asp-action="BraceletsView">BRACELETS</a></li>
					</ul>
				</div>
				<!-- Logo -->
				<div class="navbar-brand mx-auto">
					<a href="@Url.Action("Home", "Home")">
						<img src="~/image/Logo.png" alt="Logo Eternal Sparkle">
					</a>
				</div>
				<!-- Right Navbar -->
				<div class="navbar-right">
					<ul class="navbar-nav">
						<li class="nav-item"><a class="nav-link" href="#">HOME</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AboutUs">ABOUT US</a></li>
						<li class="nav-item"><a class="nav-link" href="#">CONTACT</a></li>
						<div class="search-cart-icons">
							<form class="d-flex">
								<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
								<button class="btn btn-outline-success" type="submit">🔍</button>
							</form>
							@if (User.Identity.IsAuthenticated)
							{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										@User.Identity.Name
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li><a class="dropdown-item" asp-controller="Member" asp-action="Order">Đơn mua</a></li>									
									<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" asp-controller="Member" asp-action="Profile">Profile</a></li>
									<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" asp-controller="Member" asp-action="warranty"> Phiếu bảo hành</a></li>
									<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Logout</a></li>

								</ul>
							</li>
							}
							else
							{
							<li class="nav-item">
								<a class="nav-link" href="~/Home/Login">Login/Register</a>
							</li>
							}
					</ul>
				</div>
				<!-- Cart Icons -->
				<div class="search-cart-icons">
					<a class="nav-link" href="#">🛒</a>
				</div>
			</div>
		</nav>
	</header>

	<!-- Main Content -->
	@{
		@RenderBody();
		
	}

	<!-- Footer -->
	<footer>
		<div class="footer-content">
			<div class="logo-footer">
				<img src="~/image/Logo.png" alt="ETERNAL SPARKLE Logo">
			</div>

			<div class="footer-section">
				<h2>About us</h2>
				<div class="footer-links">
					<a href="#">Home</a>
					<a asp-controller="Home" asp-action="AboutUs">About</a>
					<a href="#">Contact</a>
				</div>
			</div>

			<div class="footer-section">
				<h2>Shop</h2>
				<div class="footer-links">
					<a href="/Products/RingView">RINGS</a>
					<a href="/Products/NecklaceView">NECKLACES</a>

					<a href="#">Earrings</a>
					<a href="#">Necklaces</a>
				</div>
			</div>

			<div class="footer-section">
				<h2>Address</h2>
				<div class="address-content">
					<p>Lô E2a-7, Đường D1 Khu Công nghệ cao, P. Long Thạnh Mỹ, TP. Thủ Đức, TP. Hồ Chí Minh</p>
					<p>Contact@info.com</p>
					<p>000-0000-000</p>
				</div>
			</div>
		</div>

		<div class="copyright">
			<p>
				Copyright © 2024 ETERNAL SPARKLE DIAMOND STORE | Powered by Group 5
				<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			</p>
		</div>
	</footer>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>